@model IEnumerable<E_shop.Models.Kurv>

<link href="~/Content/Kurv.css" rel="stylesheet" />
<div class="row spacing">
    <div class="col-sm-12">
        <div class="">
            <div class="headline">
                <h1 class="rubrik"> indkøbskurv</h1>
                <div class="kurvcontent">
                    <table class="table table-striped">
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="3" style="color:red">
                                        No Match Any Document
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        @{
                                            var billede = System.Convert.ToBase64String(item.Image  );
                                            var imgsrc = string.Format("data:image/gif;base64,{0}", billede);
                                        }
                                        <td> <img src='@imgsrc' style=" width: 100px; height: 100px;" /></td>
                                        <td>@item.ProduktNavn</td>
                                        <td>@item.Antal</td>
                                        @{
                                            double num = (int.Parse(item.Pris) / 1.5);
                                            string numStr = String.Format("{0:0.00}", num);
                                        }
                                        <td>      @item.Pris,00 kr. <br /> @numStr kr.</td>

                                        <td>


                                    </tr>

                                }
                            }
                        </tbody>
                    </table>


                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td>
                                Intet matchede dit søge resultat
                            </td>
                        </tr>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





