@model IEnumerable<E_shop.Models.ProduktTabel>

<br />
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>ProduktBeskrivelse</th>
            <th>ProduktNavn</th>
            <th>Pris</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match Any Document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
    <tr>
        @{
            var billede = System.Convert.ToBase64String(item.Image);
            var imgsrc = string.Format("data:image/gif;base64,{0}", billede);
        }
        <td> <img src='@imgsrc' style=" width: 100px; height: 100px;" /></td>
        <td>@item.ProduktBeskrivelse</td>
        <td>@item.ProduktNavn</td>
        <td>@item.Pris</td>
    </tr>
            }
        }
    </tbody>
</table>

@{
    ViewBag.Title = "Home Page";
}

<h1> DATABASE VÆRDIER </h1>

@if (Model.Count() == 0)
{
    <tr>
        <td>
            Intet matchede dit søge resultat
        </td>
    </tr>
}

