<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top navbar-expand-sm" style="background-color: white; width: 1000px; margin: auto; height: 80px; border-right: solid; border-left: solid; border-bottom: solid;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand icon" href="@Url.Action("Index", "Home")">

                    <img src="~/Billeder/instagram.svg" style="height:40px; width: 40px; margin-right: 50px; position: relative; top:-10px;"/>
                </a>
                @Html.ActionLink("Hjemmesidens navn", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse navbar-expand-sm">
                <ul class="nav navbar-nav navbar-right">
                    <!-- indsæt billeder-->
                    <li style="margin-top: auto; margin-bottom: auto; margin-right: 50px;"> <input id="searching" type="search" placeholder="Søg..." /></li>
                    <li style="margin-top: auto; margin-bottom: auto; margin-right: 50px;">
                        <a class="navbar-brand icon" href="@Url.Action("Support", "Home")">
                            Support
                        </a>
                    </li>
                    <li style="margin-top: auto; margin-bottom: auto; margin-right: 50px;">
                        <div class="header__icon">
                            <div id="minibasket" data-customerid="">
                                <form action="/Basket" class="form-horizontal" method="get" novalidate="novalidate">
                                    <button type="submit" class="btn__no-style w-100" id="btnBasket">
                                    <i class="pi-sm pi-basket m-auto position-relative" style="display: block;">
                                        <small data-minibasketlinecount="">
                                        <small class="header__number-basket" data-bind="text: BasketContent().itemCount">0</small>
                                            </small></i>
                                    <p class="hidden-xs hidden-sm header__text m-0" data-minibasketprice="" data-toggle="tooltip" data-placement="bottom">
                                        <div class="text-center" data-bind="autoNumeric: BasketContent().totalWithVat">0,00 kr.</div>
                                        </p><p class="hidden-md hidden-lg header__text m-0">Kurv</p></button>
                                </form>
                            </div>
                        </div>
                    </li>
                    <li style="margin-top: auto; margin-bottom: auto;">
                        <a class="navbar-brand icon" href="@Url.Action("Opret", "Home")">Log Ind
                            </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <div id="footer" class="paddingleftright">
        <div class="row">
            <div class="col-sm-4">
                <div id="divcenter1">
                    <div class="col-sm-6">
                        <h4 style="font-weight:bold;"><br />Åbningstider</h4>
                        <br /><p>Mandag - Fredag:</p>
                        <p>Lørdag:</p>
                        <p>Søndag:</p>
                        <p>Helligdage:</p>
                    </div>
                    <div class="col-sm-6">
                        <div style="width: 100px;">
                            <p><br /><br /><br /><br />10:00 - 17:00</p>
                            <p>11:00 - 16:00</p>
                            <p>12:00 - 15:00</p>
                            <p>Lukket</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="row">
                    <div id="divcenter2">
                        <div class="col-sm-6">
                            <h4 style="font-weight:bold;"><br />Placering:</h4>
                            <p>College360</p>
                            <p>Bindslevsplads</p>
                            <p>8600 Silkeborg</p>
                            <p>Danmark</p>
                            <p>CVR: DK123456789</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="row">
                    <div id="divcenter3">
                        <div class="col-sm-6">
                            <h4 style="font-weight:bold;"><br />Find os her:</h4>
                            <br />
                            <p><img src="~/Billeder/instagram.svg" style="width:auto; height:auto; max-width:50px; max-height:40px;" /><a>Instagram: NAVN</a></p>
                            <p><img src="~/Billeder/facebook-app-symbol.svg" style="width:auto; height:auto; max-width:50px; max-height:40px;" />Facebook: NAVN</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>